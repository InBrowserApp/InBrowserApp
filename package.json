{
  "name": "@inbrowserapp/inbrowser",
  "version": "1.4.0",
  "description": "InBrowser Web Monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm -F @apps/web build",
    "dev": "pnpm -F @apps/web dev",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint-check:eslint": "eslint .",
    "lint-check:oxlint": "oxlint . -D correctness --ignore-path .gitignore",
    "lint": "run-s lint:*",
    "lint-check": "run-s lint-check:*",
    "format": "prettier --write ./**/src/**/*.{ts,vue}",
    "format-check": "prettier --check ./**/src/**/*.{ts,vue}",
    "test:unit": "vitest",
    "test:e2e": "pnpm -F @apps/web test:e2e",
    "type-check": "vue-tsc --build --noEmit",
    "deps:catalog": "pnpx codemod pnpm/catalog",
    "prepare": "husky"
  },
  "author": "InBrowser.App",
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316",
  "pnpm": {
    "overrides": {
      "@redocly/openapi-core>js-yaml": "4.1.1",
      "@redocly/openapi-core>minimatch": "5.1.9",
      "editorconfig>minimatch": "9.0.9"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@commitlint/types": "catalog:",
    "@intlify/eslint-plugin-vue-i18n": "catalog:",
    "@intlify/unplugin-vue-i18n": "catalog:",
    "@prettier/plugin-oxc": "catalog:",
    "@tsconfig/node22": "catalog:",
    "@types/jsdom": "catalog:",
    "@types/node": "catalog:",
    "@types/papaparse": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/eslint-plugin": "catalog:",
    "@vue/compiler-dom": "catalog:",
    "@vue/eslint-config-prettier": "catalog:",
    "@vue/eslint-config-typescript": "catalog:",
    "@vue/test-utils": "catalog:",
    "@vue/tsconfig": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-oxlint": "catalog:",
    "eslint-plugin-playwright": "catalog:",
    "eslint-plugin-vue": "catalog:",
    "happy-dom": "catalog:",
    "husky": "catalog:",
    "jsdom": "catalog:",
    "lint-staged": "catalog:",
    "npm-run-all2": "catalog:",
    "oxlint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:",
    "vue-eslint-parser": "catalog:",
    "vue-i18n": "catalog:",
    "vue-tsc": "catalog:",
    "wrangler": "catalog:"
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write",
      "vitest related --run --project dom"
    ],
    "*.{json,jsonc}": [
      "prettier --write"
    ]
  }
}
