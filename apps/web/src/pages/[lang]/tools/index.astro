import { getLocalizedPath } from '@shared/utils/router'

export async function getStaticPaths() {
  const languages = supportedLanguages.filter((lang: string) => lang !== 'en')

  return languages.map((lang: string) => ({
    params: { lang },
    props: { lang },
  }))
}

type Props = { lang: SupportedLanguage }

const { lang } = Astro.props

