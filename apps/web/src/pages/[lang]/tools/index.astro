---
import BaseLayout from '../../../layouts/BaseLayout.astro'
import { toolRegistry } from '@inbrowserapp/tools-registry'
import { translateMeta, supportedLanguages } from '@inbrowserapp/tools-i18n'
import type { SupportedLanguage } from '@inbrowserapp/tools-shared'
import { ToolItem } from '@shared/ui/components/tool/tool-item'

export async function getStaticPaths() {
  const languages = supportedLanguages.filter((lang: string) => lang !== 'en')

  return languages.map((lang: string) => ({
    params: { lang },
    props: { lang },
  }))
}

const { lang } = Astro.props as { lang: SupportedLanguage }

// Translation map for page titles and descriptions
const pageTranslations: Record<string, { title: string; subtitle: string }> = {
  zh: { title: '所有工具', subtitle: '免费在线浏览器工具 - 注重隐私，无数据收集' },
  'zh-CN': { title: '所有工具', subtitle: '免费在线浏览器工具 - 注重隐私，无数据收集' },
  'zh-TW': { title: '所有工具', subtitle: '免費線上瀏覽器工具 - 注重隱私，無資料收集' },
  'zh-HK': { title: '所有工具', subtitle: '免費線上瀏覽器工具 - 注重隱私，無資料收集' },
  es: {
    title: 'Todas las herramientas',
    subtitle:
      'Herramientas gratuitas en el navegador - Enfocadas en privacidad, sin recopilación de datos',
  },
  fr: {
    title: 'Tous les outils',
    subtitle:
      'Outils gratuits dans le navigateur - Axés sur la confidentialité, aucune collecte de données',
  },
  de: {
    title: 'Alle Werkzeuge',
    subtitle: 'Kostenlose Browser-Tools - Datenschutzorientiert, keine Datensammlung',
  },
  it: {
    title: 'Tutti gli strumenti',
    subtitle: 'Strumenti gratuiti nel browser - Focalizzati sulla privacy, nessuna raccolta dati',
  },
  ja: {
    title: 'すべてのツール',
    subtitle: '無料のブラウザツール - プライバシー重視、データ収集なし',
  },
  ko: { title: '모든 도구', subtitle: '무료 브라우저 도구 - 개인정보 보호 중심, 데이터 수집 없음' },
  ru: {
    title: 'Все инструменты',
    subtitle:
      'Бесплатные инструменты в браузере - Ориентированы на конфиденциальность, без сбора данных',
  },
  pt: {
    title: 'Todas as ferramentas',
    subtitle: 'Ferramentas gratuitas no navegador - Focadas em privacidade, sem coleta de dados',
  },
}

const t = pageTranslations[lang] || {
  title: 'All Tools',
  subtitle: 'Free online browser tools - Privacy focused, no data collection',
}
---

<BaseLayout title={t.title} description={t.subtitle} lang={lang}>
  <main class="max-w-6xl mx-auto p-8">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-gray-100">{t.title}</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-12">{t.subtitle}</p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        toolRegistry.map((tool) => {
          const i18n = translateMeta(tool, lang)
          return (
            <ToolItem i18n={i18n} path={`/${lang}/tools${tool.path}`} icon={tool.icon} />
          )
        })
      }
    </div>
  </main>
</BaseLayout>
