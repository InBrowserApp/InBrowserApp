---

<BaseLayout title={t.title} description={t.subtitle} lang={lang}>
  <main class="max-w-6xl mx-auto p-8">
    <HeadingOne>{t.title}</HeadingOne>
    <ToolDescription>{t.subtitle}</ToolDescription>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        toolRegistry.map((tool) => {
          const i18n = translateMeta(tool, lang)
          return (
            <ToolItem i18n={i18n} path={getLocalizedPath(`/tools${tool.path}`, lang)} icon={tool.icon} />
          )
        })
      }
    </div>
  </main>
</BaseLayout>
