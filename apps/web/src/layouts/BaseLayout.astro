---
import '@/styles/global.css'

interface Props {
  title: string
  description?: string
  lang?: string
}

const { title, description, lang = 'en' } = Astro.props
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description || 'Online browser tools'} />
    <title>{title} | InBrowserApp</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
