---
import BaseLayout from './BaseLayout.astro'

interface Props {
  title: string
  description?: string
  lang?: string
}

const { title, description, lang } = Astro.props
---

<BaseLayout title={title} description={description} lang={lang}>
  <main class="max-w-3xl mx-auto p-8">
    <slot />
  </main>
</BaseLayout>
