---
import type { ToolComponentProps as Props } from '@inbrowserapp/tools-shared'

const { ui } = Astro.props
import RomanConverter from './RomanConverter.tsx'
import { Icon } from 'astro-icon/components'
---

<div class="flex flex-col gap-8">
  <!-- Static Header (SSG) -->
  <header class="text-center">
    <h1 class="text-3xl font-bold text-gray-800 dark:text-gray-100 mb-3">{ui.name}</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed">
      {ui.description}
    </p>
  </header>

  <!-- Interactive React Component -->
  <RomanConverter client:load ui={ui} />

  <!-- Static Educational Content (SSG) -->
  <section
    class="p-6 bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-gray-800 dark:to-gray-700 rounded-xl border-l-4 border-blue-500"
  >
    <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-4 flex items-center gap-2">
      <Icon name="heroicons:information-circle" class="w-5 h-5 text-blue-500" />
      {ui.whatIsTitle}
    </h2>
    <p class="text-gray-600 dark:text-gray-300 leading-relaxed mb-4">{ui.whatIsDescription}</p>
    <div
      class="inline-flex items-center gap-2 px-4 py-2 bg-white dark:bg-gray-800 rounded-lg shadow-sm"
    >
      <span class="text-gray-500 dark:text-gray-400">Example:</span>
      <code class="font-mono text-lg font-semibold text-blue-600 dark:text-blue-400"
        >MMXXIV = 2024</code
      >
    </div>
  </section>
</div>
