---
import RomanConverter, { type Props } from './RomanConverter.tsx'
const { i18n } = Astro.props
import { Icon } from 'astro-icon/components'
import { ToolDefaultPageLayout } from '@shared/ui/components/tool/default-page-layout'
---

<ToolDefaultPageLayout title={i18n.name} description={i18n.description}>
  <!-- Interactive React Component -->
  <RomanConverter client:load i18n={i18n} />

  <!-- Static Educational Content (SSG) -->
  <section
    class="p-6 bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-gray-800 dark:to-gray-700 rounded-xl border-l-4 border-blue-500"
  >
    <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-4 flex items-center gap-2">
      <Icon name="heroicons:information-circle" class="w-5 h-5 text-blue-500" />
      {i18n.whatIsTitle}
    </h2>
    <p class="text-gray-600 dark:text-gray-300 leading-relaxed mb-4">{i18n.whatIsDescription}</p>
    <div
      class="inline-flex items-center gap-2 px-4 py-2 bg-white dark:bg-gray-800 rounded-lg shadow-sm"
    >
      <span class="text-gray-500 dark:text-gray-400">Example:</span>
      <code class="font-mono text-lg font-semibold text-blue-600 dark:text-blue-400"
        >MMXXIV = 2024</code
      >
    </div>
  </section>
</ToolDefaultPageLayout>
